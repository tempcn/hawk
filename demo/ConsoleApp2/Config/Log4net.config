<?xml version="1.0" encoding="utf-8"?>
<configuration>
<log4net>
  <root>
    <level value="ALL"/>
    <appender-ref ref="InfoFileAppender"/>
    <appender-ref ref="LogTracer"/>
  </root>
  <appender name="InfoFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="z:\log\core_info.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="-1" />
    <maximumFileSize value="1MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout" >
      <param name="ConversionPattern" value="%date [%p] [%logger] - %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
      <levelMax value="WARN" />
    </filter>
  </appender>
  <appender name="LogTracer" type="log4net.Appender.RollingFileAppender">
    <file value="z:\log\core_crash.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="1MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout" >
      <param name="ConversionPattern" value="%date [%p] [%logger] - %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />
    </filter>
  </appender>
</log4net>
</configuration>